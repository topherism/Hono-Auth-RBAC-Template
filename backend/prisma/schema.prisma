generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  username   String    @unique
  password   String
  roles      Role[]    @default([BORROWER]) // multi-role support
  privileges String[]  // optional, for specific page/feature access
  createdAt  DateTime  @default(now())
}

enum Role {
  ADMIN
  COORDINATOR
  BORROWER
}
